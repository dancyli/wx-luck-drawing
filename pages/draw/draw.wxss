.turntable, .draw-btn, .drawing-text, .activity-description, .modal-result-content {
  position: absolute;
}

.turntable{
  top: 25%;
  width: 450rpx;
  height: 450rpx; 
}

.draw-btn{
  top: 38%;
  width: 96rpx;
  height: 120rpx;
}

.drawing-text{
  text-align: center;
  font-size: 24rpx;
  top: 66%;
  font-weight: bold;
  color: #333;
}
.drawing-text text{
  color:#C8000B;
}

.activity-description{
  font-size: 22rpx;
  bottom: 13%;
  left: 24%;
  width: 50%;
  color: #CF6804;
  /* font-weight: bold; */
  line-height: 32rpx;
}
.activity-description-title{
  text-align: center;
}
.modal-result, .modal-result-luck{
  background: rgba(0, 0, 0, 0.5); 
  width:100%;
  position: absolute;
  /* display: none;  */
}

