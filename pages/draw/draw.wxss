.modal-result-content {
  width: 65%;
  height: 30%;
  left: 15%;
  top: 13%;
}

.modal-result image{
  width: 100%;
  height: 100%;
}

.modal-result-text, .modal-result-form {
  position: absolute;
  top: 45%;
  font-size: 32rpx;
  text-align: center;
  padding: 20rpx;
}

.is-luck{
  left: 25%;
}

.prize{
  color: red;
}

.btn-area{
  width: 100%;
  height: 60rpx;
  margin-top: 10rpx;
}

.btn-text{
  position: relative;
  top: -57rpx;
  font-size: 28rpx;
  color: #fff;
}

.modal-result-form{
  text-align: left;
  padding-top: 40rpx;
  padding-left: 50rpx;
  font-size: 28rpx;
}

input{
  float: right;
  margin-left: 12rpx;
  width: 68%;
  margin-top: -6rpx;
}

.form-btn-area{
  width: 70%;
  float: right;
}

button {
  height: 1.6rem;
  font-size: 28rpx;
  background: #7AB851;
  color: #fff;
  border-radius: 20rpx;
  width: 100%;
  line-height: 1.6rem;
}